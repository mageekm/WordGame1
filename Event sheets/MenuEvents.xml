<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>MenuEvents</name>
    <events>
        <event-block>
            <conditions>
                <condition id="4" name="Is touching object" type="Touch">
                    <param id="0" name="Object">StartImage</param>
                </condition>
            </conditions>
            <actions>
                <action id="-2" name="Go to layout" type="System">
                    <param id="0" name="Layout">Game</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="4" name="Is touching object" type="Touch">
                    <param id="0" name="Object">QuitButton</param>
                </condition>
            </conditions>
            <actions>
                <action id="1" name="Close" type="Browser" />
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="4" name="Is touching object" type="Touch">
                    <param id="0" name="Object">HelpButton</param>
                </condition>
            </conditions>
            <actions>
                <action id="-2" name="Go to layout" type="System">
                    <param id="0" name="Layout">Help</param>
                </action>
            </actions>
        </event-block>
    </events>
</c2eventsheet>
