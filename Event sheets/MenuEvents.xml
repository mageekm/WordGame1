<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>MenuEvents</name>
    <events>
        <variable constant="0" name="totalWords" static="0" type="number">2200</variable>
        <variable constant="0" name="randomNumber" static="0" type="number">0</variable>
        <variable constant="0" name="answerNumber" static="0" type="number">0</variable>
        <event-block>
            <conditions>
                <condition id="4" name="Is touching object" type="Touch">
                    <param id="0" name="Object">StartImage</param>
                </condition>
            </conditions>
            <actions>
                <action id="-2" name="Go to layout" type="System">
                    <param id="0" name="Layout">Help</param>
                </action>
            </actions>
        </event-block>
        <event-block any="1">
            <conditions>
                <condition id="6" name="On object clicked" type="Mouse">
                    <param id="0" name="Mouse button">0</param>
                    <param id="1" name="Click type">1</param>
                    <param id="2" name="Object clicked">StartImage</param>
                </condition>
            </conditions>
            <actions>
                <action id="-2" name="Go to layout" type="System">
                    <param id="0" name="Layout">Help</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="1" name="On any key pressed" type="Keyboard" />
            </conditions>
            <actions>
                <action id="-2" name="Go to layout" type="System">
                    <param id="0" name="Layout">Help</param>
                </action>
            </actions>
        </event-block>
    </events>
</c2eventsheet>
